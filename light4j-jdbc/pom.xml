  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.oss</groupId>
    <artifactId>oss-parent</artifactId>
    <version>5</version>
  </parent>

  <groupId>net.coatli.java</groupId>
  <artifactId>light4j-jdbc</artifactId>
  <version>0.1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>Light4J - JDBC</name>
  <description>A microservice for the Person domain with Light4J and JDBC.</description>

  <properties>
    <java.version>1.8</java.version>
    <maven>3.5.0</maven>

    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <version.light-4j>1.5.0</version.light-4j>
    <version.light-rest-4j>1.5.0</version.light-rest-4j>
    <version.jackson>2.9.1</version.jackson>
    <version.slf4j>1.7.25</version.slf4j>
    <version.jose4j>0.6.1</version.jose4j>
    <version.antlr4>4.7</version.antlr4>
    <version.commons-text>1.1</version.commons-text>
    <version.encoder>1.2.1</version.encoder>
    <version.logback>1.2.3</version.logback>
    <version.junit>4.12</version.junit>
    <version.undertow>1.4.20.Final</version.undertow>
    <version.swagger>1.0.32</version.swagger>
    <version.json-schema-validator>0.1.10</version.json-schema-validator>
    <version.hikaricp>2.6.2</version.hikaricp>
    <version.fastscanner>2.0.8</version.fastscanner>
    <version.mysql>6.0.5</version.mysql>
    <versions.maven-version>2.4</versions.maven-version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>com.networknt</groupId>
