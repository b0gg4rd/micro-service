    <dependency>
      <groupId>com.networknt</groupId>
      <artifactId>client</artifactId>
      <version>${version.light-4j}</version>
    </dependency>
    <dependency>
      <groupId>com.networknt</groupId>
      <artifactId>audit</artifactId>
      <version>${version.light-4j}</version>
    </dependency>
    <dependency>
      <groupId>com.networknt</groupId>
      <artifactId>info</artifactId>
      <version>${version.light-4j}</version>
    </dependency>
    <dependency>
      <groupId>com.networknt</groupId>
      <artifactId>health</artifactId>
      <version>${version.light-4j}</version>
    </dependency>
    <dependency>
      <groupId>com.networknt</groupId>
      <artifactId>status</artifactId>
      <version>${version.light-4j}</version>
